<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>servlet.filter.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>



  <servlet>
    <servlet-name>ReadArticles</servlet-name>
    <servlet-class>servlet.article.ArticlesServletRead</servlet-class>
  </servlet>

    <servlet>
        <servlet-name>UpdArticles</servlet-name>
        <servlet-class>servlet.article.ArticlesServletUpd</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CreateArticles</servlet-name>
        <servlet-class>servlet.article.ArticlesServletCreate</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DelArticles</servlet-name>
        <servlet-class>servlet.article.ArticlesServletDel</servlet-class>
    </servlet>


  <servlet-mapping>
    <servlet-name>ReadArticles</servlet-name>
    <url-pattern>/readArticles</url-pattern>
</servlet-mapping>

    <servlet-mapping>
        <servlet-name>UpdArticles</servlet-name>
        <url-pattern>/updArticles</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CreateArticles</servlet-name>
        <url-pattern>/createArticles</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DelArticles</servlet-name>
        <url-pattern>/delArticles</url-pattern>
    </servlet-mapping>

</web-app>
